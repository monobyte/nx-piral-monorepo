{
  "name": "@proj/shell",
  "version": "1.0.0",
  "private": true,
  "description": "Piral App Shell with Mantine UI",
  "app": "dist/index.html",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "piral build --type all",
    "serve": "piral debug --port 3000",
    "serve:release": "piral debug --type release --port 3000",
    "clean": "rm -rf dist .cache",
    "declaration": "piral declaration",
    "validate": "piral validate"
  },
  "pilets": {
    "externals": [
      "react",
      "react-dom",
      "react-router-dom",
      "@mantine/core",
      "@mantine/hooks",
      "@proj/grid"
    ],
    "files": [
      "dist/release/**/*",
      "dist/*.tgz"
    ]
  },
  "importmap": {
    "imports": {
      "react": "./node_modules/react/",
      "react-dom": "./node_modules/react-dom/",
      "react-router-dom": "./node_modules/react-router-dom/",
      "@mantine/core": "./node_modules/@mantine/core/",
      "@mantine/hooks": "./node_modules/@mantine/hooks/",
      "@proj/grid": "../../packages/grid/"
    },
    "inherit": ["react", "react-dom", "react-router-dom", "@mantine/core", "@mantine/hooks", "@proj/grid"]
  },
  "dependencies": {
    "@mantine/core": "^7.14.0",
    "@mantine/hooks": "^7.14.0",
    "@proj/grid": "*",
    "@proj/utils": "*",
    "piral-core": "^1.9.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "piral": "^1.9.2",
    "piral-cli": "^1.9.2",
    "piral-cli-rspack": "^1.1.0",
    "typescript": "^5.4.5"
  },
  "piral": {
    "name": "@proj/shell",
    "bundler": "rspack"
  }
}
